<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #101828;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatroom.controllers.LogInController">
    <children>
        <TextField fx:id="userNameField" layoutX="226.0" layoutY="135.0" />
        <Label layoutX="245.0" layoutY="40.0" text="Log In" textFill="WHITE">
            <font>
                <Font size="40.0" />
            </font>
        </Label>
        <Label layoutX="144.0" layoutY="137.0" text="User Name:" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Label layoutX="334.0" layoutY="200.0" onMouseClicked="#onRegisterMouseClicked" text="Register" textFill="WHITE" underline="true" />
        <TextField fx:id="passwordField" layoutX="226.0" layoutY="175.0" />
        <Label layoutX="151.0" layoutY="177.0" text="Password:" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Button layoutX="225.0" layoutY="339.0" mnemonicParsing="false" onAction="#onConnectButtonAction" style="-fx-background-radius: 10; -fx-background-color: #43a047;" text="Connect" textFill="WHITE">
            <effect>
                <DropShadow />
            </effect>
        </Button>
      <Label layoutX="225.0" layoutY="217.0" text="Connection" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <TextField fx:id="addressField" layoutX="226.0" layoutY="265.0" />
      <TextField fx:id="portField" layoutX="226.0" layoutY="307.0" onAction="#onPortFieldAction" />
      <Label layoutX="156.0" layoutY="267.0" text="Address:" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="169.0" layoutY="309.0" text="Port:" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
